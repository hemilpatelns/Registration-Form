<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NeoStart" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorHint">@color/hintColor</item>
<!--         <item name="colorPrimary">@color/white</item>-->
    </style>

    <style name="ProfileImageShape">
        <item name="cornerSize">50%</item>
        <item name="strokeColor">@color/iconColor</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="NextButton">
        <item name="android:background">@color/iconColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PreviousButton">
        <item name="android:background">@drawable/bg_previous_btn</item>
        <item name="android:textColor">@color/iconColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HintTextStyle">
        <item name="android:textColorHint">@color/hintColor</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="buttonTint">@color/iconColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:dropDownVerticalOffset">45dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>

    <style name="WarningTextStyle">
        <item name="android:textColor">@color/warningColor</item>
    </style>
    <style name="Theme.NeoStart" parent="Base.Theme.NeoStart" />
</resources>